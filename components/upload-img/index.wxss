.upload-box {
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-box .upload-box-row {
  margin-top: -18rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.upload-box .upload-box-row .upload-box-row-item {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  margin: 18rpx 18rpx 0 0;
}

.upload-box .upload-box-row .upload-box-row-item .upload-box-row-item-del {
  position: absolute;
  z-index: 9;
  right: -15rpx;
  top: -15rpx;
  width: 50rpx;
  height: 50rpx;
  background: #fff;
  border-radius: 50%;
  padding: 5rpx;
}

.upload-box .upload-box-row .upload-box-row-item .upload-box-row-item-icon {
  width: 60%;
  height: 40%;
  display: inline-block;
}

.upload-box .upload-box-row .upload-box-row-item .upload-box-row-item-loading {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
}

.upload-box .upload-box-row .upload-box-row-item .upload-box-row-item-loading .loading-icon {
  width: 40%;
  height: 40%;
  animation: loading 1s linear infinite;
}

@keyframes loading {
  to {
    transform: rotate(360deg);
  }
}