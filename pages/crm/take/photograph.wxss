@import"/weui.wxss";

.img {
  display: inline-block;
}

.pic {
  float: left;
  position: relative;
  margin: 10rpx;
  width: 225rpx;
  height: 225rpx;

}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
}

.weui-uploader {
  padding: 10rpx;
}


.lineHeight {
  width: 100%;
  line-height: 80rpx;
  border-bottom: 1px solid #ccc;
  font-size: 30rpx;
}

.container {
  padding: 0;
  align-items: left;
  padding-left: 15rpx;
}

.numberInfo {
  font-size: 24rpx;
  text-indent: 15rpx;
  border-bottom: 1px solid #ccc;
}

