page {

  height: 100%;
}
input{
  font-size: 25rpx;
}
.icon{
  width: 50rpx;
  height: 50rpx;
}
.m3{
  margin: 30rpx;
}
.df{
  display: flex;

}
.f1{
  flex: 1;
}
.center{
  text-align: center;
}
.navbar {
  display: flex;
  background-color: white;
  width: 100%;
  flex-direction: row;
  overflow: auto;
  position: fixed;
  bottom: 0;
  z-index: 999;
}

.navbar .item {
  flex: 1;
  font-size: 30rpx;
  text-align: center;
  background: #fff;
  color: #888;
}

.navbar .itemactive {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #D5941E;
  position: relative;
}

.box {
margin-bottom: 80rpx;
 
  padding: 0;
  justify-content: space-between;
  box-sizing: border-box;
  flex-direction: column;
  display: flex;

}

.line {
  display: flex;
  padding: 20rpx;

}

.tittle {
  flex: 3;
  line-height: 60rpx;
  font-size: 25rpx;

}

.inputbox {
  flex: 7;
  background-color: white;
  border-radius: 10rpx;
}

/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/
/* 模态框 */
.drawer_box {
  width: 450rpx;
  max-height: 800rpx;
  position: fixed;
  top: 35%;
  left: 0;
  z-index: 1001;
  background: #FFFFFF;
  margin: -150px 145rpx 0 145rpx;
  border-radius: 3px;
}

.tccontent {
  display: flex;
  height: 60rpx;

}

.tctop {
  flex: 8;
  height: 60rpx;
  overflow: hidden;
  border-bottom: 1rpx solid gray;
}

.serchbtnbox {
  flex: 2;
  height: 60rpx;
  border-radius: 10rpx;
}

.drawer_content {
  padding: 20rpx;
  overflow-y: scroll;
  max-height: 600rpx;
  
}
button {
  width: 50% !important;

  color: white;
  font-weight: bolder !important;
  background-color: #D5941E;
}
