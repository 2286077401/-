/* pages/crm/msg/search.wxss */
page {
  background-color: #E9E9E9;
}

.content {
  display: flex;
  margin: 30rpx 0 30rpx 0;
  padding: 0 20rpx 0 20rpx;
}

.tittle {
  flex: 3;
  text-align: center;
  font-size: 26rpx;
  line-height: 65rpx;
}

.input {
  flex: 7;
}

input {
  background-color: white;
  border-radius: 10rpx;
  padding: 10rpx;
}

.bttn {
  flex: 1;
}

button {
  width: 50% !important;

  color: white;
  font-weight: bolder !important;
  background-color: #D5941E;
}



/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/
/* 模态框 */
.drawer_box {
  width: 450rpx;
  max-height: 800rpx;
  position: fixed;
  top: 35%;
  left: 0;
  z-index: 1001;
  background: #FFFFFF;
  margin: -150px 145rpx 0 145rpx;
  border-radius: 3px;
  overflow: scroll;
  overflow-y: scroll;
}

.tccontent {
  display: flex;
  height: 60rpx;
  width: 390rpx;

}

.tctop {
  flex: 8;
  height: 60rpx;
  overflow: hidden;
  border-bottom: 1rpx solid gray;
}

.serchbtnbox {
  flex: 2;
  height: 60rpx;
  border-radius: 10rpx;
}

.drawer_content {
  padding: 20rpx;
  overflow: scroll;
  overflow-y: scroll;
  max-height: 600rpx;
  width: 410rpx;

}