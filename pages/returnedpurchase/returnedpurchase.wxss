.uploader-list{
  position: relative;
  height: 200rpx;
  display: flex;
  flex-wrap:wrap; 
  overflow: hidden;
}
 
.justify-content-start{
  justify-content: start;
}




.swipertab {
  display: flex;
  background-color: white;
  padding-bottom: 10rpx;
  position: fixed;
  width: 100%;
  top: 0rpx;
  z-index: 999;
}

.bolder {
  font-weight: bolder;
}

.conter {
  font-size: 26rpx;
  line-height: 50rpx;
  padding: 20rpx;
}


.container1 {
  width: 100%;
  /* height: 100%; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin-top: 70rpx;
}

.tabitem {
  flex: 1;
  text-align: center;
  transition: all 1s;
  font-size: 26rpx;
  line-height: 50rpx;
}

.active {
  font-size: 35rpx;
  flex: 1;
  text-align: center;
  color: #D5941E;

}

.contentBox {
  display: flex;
  font-size: 25rpx;
  width: 100%;
  padding: 30rpx 0 30rpx 0;
  line-height: 40rpx;
}

input {
  font-size: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  box-orient: vertical;
  line-clamp: 1;
}

.txt {

  height: 50rpx;
  padding-bottom: 10rpx;
  width: 50%;
  margin: 0 auto;

}

.active>.txt {
  border-bottom: 2rpx solid #D5941E;
}

.container2 {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.khName {
  max-height: 800rpx;
  overflow: scroll;
  position: absolute;
  top: 125rpx;
  width: 70%;
  right: 114rpx;
  background-color: white;
  color: black;
  border-radius: 20rpx;
}

.topOrder {
  display: flex;
  font-size: 26rpx;
  padding-left: 25rpx;
  border-bottom: 1rpx solid #DBDBDB;
  padding-bottom: 10rpx;
}

/* //下拉框 */
.select_box {
  /* background: #fff;
  width: 620rpx;
  margin: 0 auto;
  margin-top: 40rpx; */
  height: 40rpx;
  line-height: 40rpx;
  text-align: left;
  position: relative;
}

.select {
  box-sizing: border-box;
  width: 50%;
  height: 40rpx;
  border: 1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 28rpx;
  flex: 1;
  color: rgb(102, 102, 102);
  line-height: 86rpx;
  height: 86rpx;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  z-index: 10;
  width: 50%;

  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  color: rgb(102, 102, 102);
  font-size: 28rpx;
}
/* 销售类型遮罩 */
.bg {
  display: none;
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 1001;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}
 /* //销售类型遮罩层 */

/* 设置背景遮罩层样式 */
.mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
/* 设置遮罩内容样式 */
.maskContent {
  width: 70%;
  background: #fff;
  border-radius: 5px;
  padding: 10rpx;
  line-height: 50rpx;
}
/* 设置关闭按钮图片的位置 */
.closeImg {
  position: fixed;
  top: 40rpx;
  right: 40rpx;
}
/* 设置关闭按钮宽高 */
.closeImg_image {
  width: 50rpx;
  height: 50rpx;
}
 
 